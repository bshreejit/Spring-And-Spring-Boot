<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>

		<!-- Database connection settings -->

		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/hibernatedb</property>
		<property name="connection.username">root</property>
		<property name="connection.password"></property>


		<!-- JDBC connection pool (use the built-in) -->
		<property name="connection.pool_size">1</property>

		<!-- SQL dialect -->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>

		<!-- Enable Hibernate's automatic session context management -->
		<property name="current_session_context_class">thread</property>

		<!-- Disable the second-level cache -->
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>

		<!-- Echo all executed SQL to stdout -->
		<property name="show_sql">true</property>

		<!-- For Creation -->
		<!-- <property name="hbm2ddl.auto">create</property> validate, create,update -->

		<!-- Updating -->
		<property name="hbm2ddl.auto">create</property> <!-- validate, create,update -->


		<!-- Mapping to Entity -->

		<mapping class="com.shreejit.model.Student" />
		<mapping class="com.shreejit.model.Address" />
		<mapping class="com.shreejit.model.Employee" />
		<mapping class="com.shreejit.model.Phone" />
		<mapping class="com.shreejit.model.Department" />
		

		<!-- <mapping class="com.test.models.EmployeeTest" /> <mapping class="com.test.models.Employee" 
			/> <mapping class="com.test.models.Address" /> <mapping class="com.test.models.PhoneNo" 
			/> <mapping class="com.test.models.Student" /> <mapping class="com.test.models.PhoneNo" 
			/> <mapping class="com.test.models.Department" /> -->

	</session-factory>

</hibernate-configuration>